<%- include("header.ejs") %>
<body>
    <div class="container mx-auto p-8">
        <!-- Header Section -->
        <header class="mb-8">
            <h1 class="text-3xl font-bold text-center text-blue-600">Student TC Management</h1>
        </header>

        <!-- Session Management Section -->
        <section class="my-8">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Manage Sessions</h2>

            <form action="/sessions" method="POST" class="space-y-4">
                <div>
                    <label for="year" class="block text-sm font-medium text-gray-700">Session Year:</label>
                    <input type="text" id="year" name="year" placeholder="Enter Session Year" required
                        class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label for="startDate" class="block text-sm font-medium text-gray-700">Start Date:</label>
                    <input type="date" id="startDate" name="startDate" required
                        class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label for="endDate" class="block text-sm font-medium text-gray-700">End Date:</label>
                    <input type="date" id="endDate" name="endDate" required
                        class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <button type="submit"
                        class="w-full bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Create Session</button>
                </div>
            </form>

            <h3 class="text-xl font-semibold text-gray-800 mt-8 mb-4">Existing Sessions</h3>
            <table class="min-w-full bg-white rounded-lg shadow-md">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Session Year</th>
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Start Date</th>
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">End Date</th>
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (sessions && sessions.length > 0) { %>
                        <% sessions.forEach(session => { %>
                            <tr class="border-b hover:bg-gray-50">
                                <td class="px-4 py-2 text-sm text-gray-700"><%= session.year %></td>
                                <td class="px-4 py-2 text-sm text-gray-700"><%= session.startDate.toLocaleDateString() %></td>
                                <td class="px-4 py-2 text-sm text-gray-700"><%= session.endDate.toLocaleDateString() %></td>
                                <td class="px-4 py-2 space-x-2">
                                    <!-- Update Session Form -->
                                    <form action="/sessions/<%= session._id %>?_method=PUT" method="POST" class="inline-block">
                                        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Edit</button>
                                    </form>
                                    <!-- Delete Session Form -->
                                    <form action="/sessions/<%= session._id %>?_method=DELETE" method="POST" class="inline-block">
                                        <button type="submit" onclick="return confirm('Are you sure you want to delete this session?')" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center text-sm text-gray-500 py-4">No sessions available.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </section>

        <!-- Class Management Section -->
        <section class="my-8">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Manage Classes</h2>
            <form action="/classes" method="POST" class="space-y-4">
                <div>
                    <label for="className" class="block text-sm font-medium text-gray-700">Class Name:</label>
                    <input type="text" id="className" name="className" placeholder="Enter Class Name" required
                        class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label for="sessionId" class="block text-sm font-medium text-gray-700">Session:</label>
                    <select id="sessionId" name="sessionId" required
                        class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <% sessions.forEach(session => { %>
                            <option value="<%= session._id %>"><%= session.year %> - <%= session.startDate.toLocaleDateString() %> to <%= session.endDate.toLocaleDateString() %></option>
                        <% }); %>
                    </select>
                </div>
                <div>
                    <button type="submit"
                        class="w-full bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Create Class</button>
                </div>
            </form>

            <h3 class="text-xl font-semibold text-gray-800 mt-8 mb-4">Existing Classes</h3>
            <table class="min-w-full bg-white rounded-lg shadow-md">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Class Name</th>
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Session</th>
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (classes && classes.length > 0) { %>
                        <% classes.forEach(classObj => { %>
                            <tr class="border-b hover:bg-gray-50">
                                <td class="px-4 py-2 text-sm text-gray-700"><%= classObj.className %></td>
                                <td class="px-4 py-2 text-sm text-gray-700"><%= classObj.sessionId.year %></td>
                                <td class="px-4 py-2 space-x-2">
                                    <!-- Edit Class Form -->
                                    <form action="/classes/<%= classObj._id %>?_method=PUT" method="POST" class="inline-block">
                                        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Edit</button>
                                    </form>
                                    <!-- Delete Class Form -->
                                    <form action="/classes/<%= classObj._id %>?_method=DELETE" method="POST" class="inline-block">
                                        <button type="submit" onclick="return confirm('Are you sure you want to delete this class?')" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="text-center text-sm text-gray-500 py-4">No classes available.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </section>

        <!-- Student Management Section -->
        <section class="my-8">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Manage Students</h2>

            <!-- Create Student Form -->
            <form action="/students" method="POST" enctype="multipart/form-data" class="space-y-4">
                <div>
                    <label for="student_name" class="block text-sm font-medium text-gray-700">Student Name:</label>
                    <input type="text" id="student_name" name="student_name" placeholder="Enter Student Name" required
                        class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label for="class_obj" class="block text-sm font-medium text-gray-700">Class:</label>
                    <input type="text" id="class_obj" name="class_obj" placeholder="Enter Class Name" required
                        class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label for="tc" class="block text-sm font-medium text-gray-700">Upload TC (Transfer Certificate):</label>
                    <input type="file" id="tc" name="tc" accept=".pdf,.jpg,.png,.jpeg" required
                        class="mt-1 block w-full text-sm text-gray-500 file:py-2 file:px-4 file:rounded-lg file:border file:border-gray-300 file:bg-gray-50 hover:file:bg-blue-100">
                </div>
                <div>
                    <button type="submit"
                        class="w-full bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Upload TC</button>
                </div>
            </form>
            
            <!-- Existing Students Section -->
            <h3 class="text-xl font-semibold text-gray-800 mt-8 mb-4">Existing Students</h3>
            <table class="min-w-full bg-white rounded-lg shadow-md">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Student Name</th>
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Class</th>
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">TC</th>
                        <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (students && students.length > 0) { %>
                        <% students.forEach(student => { %>
                            <tr class="border-b hover:bg-gray-50">
                                <td class="px-4 py-2 text-sm text-gray-700"><%= student.student_name %></td>
                                <td class="px-4 py-2 text-sm text-gray-700"><%= student.class_obj %></td>
                                <td class="px-4 py-2 text-sm text-gray-700">
                                    <% if (student.tc) { %>
                                        <a href="/uploads/<%= student.tc.filename %>" class="text-blue-600 hover:underline">View TC</a>
                                    <% } else { %>
                                        <span class="text-red-600">No TC Uploaded</span>
                                    <% } %>
                                </td>
                                <td class="px-4 py-2 space-x-2">
                                    <!-- Update TC Form -->
                                    <form action="/students/<%= student._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="inline-block">
                                        <input type="file" name="tc" accept=".pdf,.jpg,.png,.jpeg" class="p-1 text-sm border border-gray-300 rounded-md">
                                        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Update TC</button>
                                    </form>

                                    <!-- Delete TC Form -->
                                    <form action="/students/<%= student._id %>?_method=DELETE" method="POST" class="inline-block">
                                        <button type="submit" onclick="return confirm('Are you sure you want to delete this TC?')"
                                            class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700">Delete TC</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center text-sm text-gray-500 py-4">No students found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </section>
    </div>


</body>
