<%- include("header.ejs") %>
    <div class="w-full h-screen flex px-20">
        <div class="w-1/2 flex items-center justify-center h-screen">
            <div class="w-full px-32">
                <h3 class="text-4xl">Welcome to <br><span class="text-blue-600 font-semibold">DIVINE WISDOM LOGIN</span></h3>
            </div>
        </div>

        <div class="w-1/2 flex items-center justify-center h-screen">
            <div class="w-full px-32">
                <h4 class="text-2xl capitalize mb-5">Login to your account</h4>

                <% if (errorMessage) { %>
                    <div class="text-red-500 mb-4">
                        <strong><%= errorMessage %></strong>
                    </div>
                <% } %>

                <form autocomplete="off" action="/users/login" method="post">
                    <input
                        class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                        type="email" placeholder="Email" name="email" required>
                    <input
                        class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                        type="password" placeholder="Password" name="password" required>
                    <input class="px-5 block rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit" value="Login">
                </form>
            </div>
        </div>
    </div>
<%- include("Footer.ejs") %>
